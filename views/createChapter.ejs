<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<body>
  <form action="/chapters/create" method="POST" enctype="multipart/form-data">
    <label for="name">Chapter Name:</label>
    <input type="text" name="name" required>

    <label for="description">Description:</label>
    <textarea name="description" required></textarea>

    <label for="president">President:</label>
    <select name="president" required>
        <% users.forEach(user => { %>
            <option value="<%= user._id %>"><%= user.name %></option>
        <% }); %>
    </select>

    <label for="vicePresident">Vice President:</label>
    <select name="vicePresident" required>
        <% users.forEach(user => { %>
            <option value="<%= user._id %>"><%= user.name %></option>
        <% }); %>
    </select>

    <label for="coordinator">Coordinator:</label>
    <select name="coordinator" required>
        <% users.forEach(user => { %>
            <option value="<%= user._id %>"><%= user.name %></option>
        <% }); %>
    </select>

    <label for="admin">Admin:</label>
    <select name="admin" required>
        <% users.forEach(user => { %>
            <option value="<%= user._id %>"><%= user.name %></option>
        <% }); %>
    </select>

    <label for="profileImage">Upload Profile Image:</label>
    <input type="file" name="profileImage" accept="image/*">

    <button type="submit">Create Chapter</button>
</form>

</body>
</html>