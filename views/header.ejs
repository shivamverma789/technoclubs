<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="/stylesheets/header.css">
</head>

<header>
    <div class="header-container">
        <a href="/" class="logo">
            <img src="/uploads/logo.jpg" alt="Techno Clubs Portal">
        </a>

        <nav>
            <ul class="nav-links">
                <li><a href="/chapters">Communities</a></li>
                <li><a href="/dashboard/leaderboard">Leader Board</a></li>
                <li><a href="/events">Events</a></li>
                <li><a href="/about">About</a></li>
            </ul>
        </nav>

        <div class="header-icons">
            <!-- Notifications Icon -->
            <a href="/notifications" class="icon-link">
                <i class="fas fa-bell"></i>
            </a>

            <!-- Gifts/Rewards Icon -->
            <a href="/rewards" class="icon-link">
                <i class="fas fa-gift"></i>
            </a>

            <!-- User Profile Dropdown -->
            <% if (user) { %>
                <div class="user-profile-dropdown">
                    <a href="javascript:void(0)" class="user-profile">
                        <img src="<%= user.profileImage ? '/uploads/profilePictures/' + user.profileImage : '/uploads/demoImages/userProfile.jpg' %>"
                            alt="User Profile" class="user-icon">
                    </a>
                    <div class="dropdown-content">
                        <a href="/dashboard/user">Profile</a>
                        <a href="/auth/logout">Logout</a>
                    </div>
                </div>
                <% } else { %>
                    <a href="/auth/login" class="btn login-btn">Login</a>
                    <% } %>
        </div>
    </div>
</header>