<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Chapters</title>

    <!-- Stylesheets -->
    <link rel="stylesheet" href="/stylesheets/chapters.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>

<body>

    <!-- Header -->
    <% include ./header.ejs %>

        <!-- Main Content -->
        <div class="container mt-5">
            <h2 class="text-center fw-bold">All Chapters</h2>

            <% if (chapters.length===0) { %>
                <p class="text-muted text-center mt-4">No chapters available yet.</p>
                <% } else { %>
                    <div class="row mt-4">
                        <% chapters.forEach(chapter=> { %>
                            <div class="col-md-4">
                                <div class="chapter-card">
                                    <img src="/uploads/chapterProfiles/<%= chapter.profileImage %>"
                                        alt="<%= chapter.name %> Logo" class="chapter-logo">

                                    <div class="chapter-info">
                                        <h3>
                                            <%= chapter.name %>
                                        </h3>
                                        <p class="description">
                                            <%= chapter.description %>
                                        </p>
                                    </div>

                                    <div class="chapter-actions">
                                        <span class="icon"><i class="bi bi-people"></i> 120 Members</span>
                                        <span class="icon"><i class="bi bi-calendar-event"></i> 50 Events</span>
                                        <a href="/chapters/<%= chapter._id %>" class="btn btn-gradient">View Club</a>
                                    </div>
                                </div>
                            </div>
                            <% }); %>
                    </div>
                    <% } %>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>