<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>

    <link rel="stylesheet" href="/stylesheets/userDashboard.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>

<body>

    <!-- Header (if any) -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="#">Techno Clubs Portal</a>
            </div>
        </nav>
    </header>

    <!-- Main Profile Content -->
    <div class="container mt-5">
        <!-- Profile Header -->
        <div class="profile-header">
            <img src="https://via.placeholder.com/150" alt="Profile Picture">
            <h1>John Doe</h1>
            <p>A passionate tech enthusiast and active member of multiple student organizations.</p>
        </div>

        <!-- Registered Events Section -->
        <section>
            <h2 class="section-title">Registered Events</h2>
            <div class="card">
                <div class="card-header">Event 1</div>
                <div class="card-body">
                    <p><strong>Date:</strong> March 25, 2025</p>
                    <p><strong>Description:</strong> A detailed description of the event.</p>
                    <a href="#">View Event</a>
                </div>
            </div>
            <div class="card">
                <div class="card-header">Event 2</div>
                <div class="card-body">
                    <p><strong>Date:</strong> April 10, 2025</p>
                    <p><strong>Description:</strong> A detailed description of the event.</p>
                    <a href="#">View Event</a>
                </div>
            </div>
        </section>

        <!-- Past Events Section -->
        <section>
            <h2 class="section-title">Past Events</h2>
            <div class="card">
                <div class="card-header">Past Event 1</div>
                <div class="card-body">
                    <p><strong>Date:</strong> February 15, 2025</p>
                    <p><strong>Description:</strong> Summary of past event 1.</p>
                    <a href="#">View Event</a>
                </div>
            </div>
            <div class="card">
                <div class="card-header">Past Event 2</div>
                <div class="card-body">
                    <p><strong>Date:</strong> January 20, 2025</p>
                    <p><strong>Description:</strong> Summary of past event 2.</p>
                    <a href="#">View Event</a>
                </div>
            </div>
        </section>

        <!-- My Chapters Section -->
        <section>
            <h2 class="section-title">My Chapters</h2>
            <div class="card">
                <div class="card-header">IEEE</div>
                <div class="card-body">
                    <p><strong>Members:</strong> 150 members</p>
                    <a href="#">View Chapter</a>
                </div>
            </div>
            <div class="card">
                <div class="card-header">ACM</div>
                <div class="card-body">
                    <p><strong>Members:</strong> 120 members</p>
                    <a href="#">View Chapter</a>
                </div>
            </div>
        </section>

        <!-- Profile Update Section (Optional) -->
        <section>
            <h2 class="section-title">Settings</h2>
            <a href="#" class="btn btn-primary">Edit Profile</a>
        </section>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>