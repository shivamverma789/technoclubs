<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Events</title>
  <link rel="stylesheet" href="/stylesheets/events.css">
</head>

<body>
  <!-- Header -->
  <header>
    <% include ./header.ejs %>
  </header>

  <h2>Events</h2>
  <!-- Search Bar -->
  <div class="search-container">
    <input type="text" class="search-box" placeholder="Search Events">
  </div>

  <!-- Tabs for Event Type -->
  <div class="tabs">
    <button class="tab-button active" onclick="showEvents('upcoming')">Upcoming Events</button>
    <button class="tab-button" onclick="showEvents('past')">Past Events</button>
  </div>

  <!-- Upcoming Events Section -->
  <div class="events-container" id="upcoming-events">
    <% if (upcomingEvents.length> 0) { %>
      <% upcomingEvents.forEach(event=> { %>
        <a href="/events/<%= event._id %>" class="event-card-link">
          <div class="event-card">
            <img src="/uploads/eventPosters/<%= event.poster %>" alt="<%= event.name %>">
            <h3>
              <%= event.name %>
            </h3>
            <p><strong>Category:</strong>
              <%= event.category %>
            </p>
            <p>
              <%= event.shortDescription %>
            </p>
            <p><strong>Date:</strong>
              <%= event.eventDate.toDateString() %>
            </p>
            <button class="register-button">Register</button>
          </div>
        </a>
        <% }) %>
          <% } else { %>
            <p>No upcoming events available.</p>
            <% } %>
  </div>

  <!-- Past Events Section -->
  <div class="events-container" id="past-events" style="display: none;">
    <% if (pastEvents.length> 0) { %>
      <% pastEvents.forEach(event=> { %>
        <a href="/event/<%= event._id %>" class="event-card-link">
          <div class="event-card">
            <img src="/uploads/eventPosters/<%= event.poster %>" alt="<%= event.name %>">
            <h3>
              <%= event.name %>
            </h3>
            <p><strong>Category:</strong>
              <%= event.category %>
            </p>
            <p>
              <%= event.shortDescription %>
            </p>
            <p><strong>Date:</strong>
              <%= event.eventDate.toDateString() %>
            </p>
          </div>
        </a>
        <% }) %>
          <% } else { %>
            <p>No past events available.</p>
            <% } %>
  </div>


  <script>
    function showEvents(type) {
      document.getElementById("upcoming-events").style.display = (type === "upcoming") ? "flex" : "none";
      document.getElementById("past-events").style.display = (type === "past") ? "flex" : "none";

      let buttons = document.querySelectorAll(".tab-button");
      buttons.forEach(btn => btn.classList.remove("active"));
      event.target.classList.add("active");
    }
  </script>
</body>

</html>