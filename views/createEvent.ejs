<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/stylesheets/createEvents.css">
  <!-- Flatpickr CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
  <!-- Flatpickr JS -->
  <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>


</head>

<body>
  <form action="/events/create" method="POST" enctype="multipart/form-data">

    <!-- Event Details -->
    <div class="section">
      <h3>Event Details</h3>
      <label>Event Name:</label>
      <input type="text" name="name" placeholder="Enter event name" required />

      <label>Event Poster:</label>
      <!-- File Upload Field -->
      <div class="file-upload" onclick="document.getElementById('fileInput').click()">
        <img src="/uploads/icons/folder-upload.png" alt="Upload Icon" class="upload-icon">
        <!-- Replace with your actual icon -->
        <p>Drag and drop image, or <span>click to browse</span></p>
      </div>

      <!-- Hidden File Input -->
      <input type="file" id="fileInput" name="poster" accept="image/*" required onchange="updateFileName(this)">

      <!-- Display Selected File Name -->
      <p id="fileName"></p>


      <label>Short Description:</label>
      <textarea name="shortDescription" placeholder="Brief overview of the event(100-150 words) " required></textarea>

      <label>Long Description:</label>
      <textarea name="longDescription" placeholder="Detailed event explanation , agenda , and highlights"
        required></textarea>
    </div>

    <!-- Event Schedule & Venue -->
    <div class="section">
      <h3>Event Schedule and Venue</h3>
      <label>Event Date:</label>
      <input type="date" name="eventDate" placeholder="Select Date" required />

      <label>Start Time:</label>
      <input type="time" name="startTime" placeholder="12:30 pm" required />

      <label>End Time:</label>
      <input type="time" name="endTime" placeholder="3:30 pm" required />

      <label>Duration (in hours):</label>
      <input type="number" name="duration" placeholder="3" required />

      <label>Venue:</label>
      <input type="text" name="venue" placeholder="Physical location or online event link" required />
    </div>

    <!-- Speaker Details -->
    <div class="section">
      <h3>Speakers</h3>
      <div id="speakerContainer">
        <label>Speaker Name:</label>
        <input type="text" name="speakerName" placeholder="Enter Speakers name" required />

        <label>Speaker Description:</label>
        <textarea name="speakerDescription" placeholder="Brief bio or achievements" required></textarea>

        <label>Speaker Profile Photo:</label>
        <div class="file-upload" onclick="document.getElementById('fileInput').click()">
          <img src="/uploads/icons/folder-upload.png" alt="Upload Icon" class="upload-icon">
          <!-- Replace with your actual icon -->
          <p>Drag and drop image, or <span>click to browse</span></p>
        </div>
      </div>
      <button type="button" onclick="addSpeaker()">Add Another Speaker</button>
    </div>

    <button type="submit">Create Event</button>
  </form>


  <script>

    document.addEventListener("DOMContentLoaded", function () {
      // Custom Time Picker
      flatpickr("input[type='time']", {
        enableTime: true,
        noCalendar: true, // Remove date selection
        dateFormat: "H:i", // Format: HH:MM
        time_24hr: true, // Use 24-hour format
        disableMobile: "true"
      });
    });


    function updateFileName(input) {
      const fileName = input.files.length > 0 ? input.files[0].name : "No file chosen";
      document.getElementById("fileName").textContent = fileName;
    }

    // Toggle fee amount field based on "Is Paid" selection
    document.getElementById("isPaid").addEventListener("change", function () {
      document.getElementById("feeAmountField").style.display = this.value === "true" ? "block" : "none";
    });

    // Add multiple speakers dynamically
    function addSpeaker() {
      const container = document.getElementById("speakerContainer");
      const speakerIndex = container.children.length;
      const speakerDiv = document.createElement("div");
      speakerDiv.classList.add("speaker");

      speakerDiv.innerHTML = `
        <label>Speaker Name:</label>
        <input type="text" name="speakerName" required />
  
        <label>Speaker Description:</label>
        <textarea name="speakerDescription" required></textarea>
  
        <label>Speaker Profile Photo:</label>
        <input type="file" name="speakerProfile" accept="image/*" required />
      `;

      container.appendChild(speakerDiv);
    }
  </script>

</body>

</html>