<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<body>
  <form action="/events/create" method="POST" enctype="multipart/form-data">
    <label>Event Name:</label>
    <input type="text" name="name" required />
  
    <label>Event Poster:</label>
    <input type="file" name="poster" accept="image/*" required />
  
    <label>Short Description:</label>
    <textarea name="shortDescription" required></textarea>
  
    <label>Long Description:</label>
    <textarea name="longDescription" required></textarea>
  
    <label>Event Date:</label>
    <input type="date" name="eventDate" required />
  
    <label>Start Time:</label>
    <input type="time" name="startTime" required />
  
    <label>End Time:</label>
    <input type="time" name="endTime" required />
  
    <label>Duration (in hours):</label>
    <input type="number" name="duration" required />
  
    <label>Venue:</label>
    <input type="text" name="venue" required />
  
    <label>Capacity:</label>
    <input type="number" name="capacity" required />
  
    <label>Is Paid?</label>
    <select name="isPaid" id="isPaid">
      <option value="false">No</option>
      <option value="true">Yes</option>
    </select>
  
    <div id="feeAmountField" style="display: none;">
      <label>Fee Amount:</label>
      <input type="number" name="feeAmount" id="feeAmount" />
    </div>
  
    <h3>Speakers</h3>
    <div id="speakerContainer">
      <div class="speaker">
        <label>Speaker Name:</label>
        <input type="text" name="speakerName" required />
  
        <label>Speaker Description:</label>
        <textarea name="speakerDescription" required></textarea>
  
        <label>Speaker Profile Photo:</label>
        <input type="file" name="speakerProfile" accept="image/*" required />
      </div>
    </div>
  
    <button type="button" onclick="addSpeaker()">Add Another Speaker</button>
  
    <button type="submit">Create Event</button>
  </form>
  
  <script>
    // Toggle fee amount field based on "Is Paid" selection
    document.getElementById("isPaid").addEventListener("change", function () {
      document.getElementById("feeAmountField").style.display = this.value === "true" ? "block" : "none";
    });
  
    // Add multiple speakers dynamically
    function addSpeaker() {
      const container = document.getElementById("speakerContainer");
      const speakerIndex = container.children.length;
      const speakerDiv = document.createElement("div");
      speakerDiv.classList.add("speaker");
  
      speakerDiv.innerHTML = `
        <label>Speaker Name:</label>
        <input type="text" name="speakerName" required />
  
        <label>Speaker Description:</label>
        <textarea name="speakerDescription" required></textarea>
  
        <label>Speaker Profile Photo:</label>
        <input type="file" name="speakerProfile" accept="image/*" required />
      `;
  
      container.appendChild(speakerDiv);
    }
  </script>
  
</body>
</html>