<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create Event</title>
  <link rel="stylesheet" href="/stylesheets/createEvents.css">
  <!-- Flatpickr CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
  <!-- Flatpickr JS -->
  <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
</head>

<body>
  <form action="/events/create" method="POST" enctype="multipart/form-data">

    <!-- Event Details -->
    <div class="section">
      <h3>Event Details</h3>
      <label>Event Name:</label>
      <input type="text" name="name" placeholder="Enter event name" required />

      <label>Event Poster:</label>
      <div class="file-upload" onclick="document.getElementById('posterInput').click()">
        <img src="/uploads/icons/folder-upload.png" alt="Upload Icon" class="upload-icon">
        <p>Drag and drop image, or <span>click to browse</span></p>
      </div>
      <input type="file" id="posterInput" name="poster" accept="image/*" required onchange="updateFileName('posterInput', 'posterFileName')">
      <p id="posterFileName"></p>

      <label>Short Description:</label>
      <textarea name="shortDescription" placeholder="Brief overview of the event (100-150 words)" required></textarea>

      <label>Long Description:</label>
      <textarea name="longDescription" placeholder="Detailed event explanation, agenda, and highlights" required></textarea>
    </div>

    <!-- Event Schedule & Venue -->
    <div class="section">
      <h3>Event Schedule and Venue</h3>
      <label>Event Date:</label>
      <input type="date" name="eventDate" required />

      <label>Start Time:</label>
      <input type="time" name="startTime" required />

      <label>End Time:</label>
      <input type="time" name="endTime" required />

      <label>Duration (in hours):</label>
      <input type="number" name="duration" placeholder="3" required />

      <label>Venue:</label>
      <input type="text" name="venue" placeholder="Physical location or online event link" required />

      <label>Event Capacity:</label>
      <input type="number" name="capacity" placeholder="e.g., 100" required />
    </div>

    <!-- Payment Details -->
    <div class="section">
      <h3>Event Payment</h3>
      <label>Is this event paid?</label>
      <select name="isPaid" id="isPaid">
        <option value="false">No</option>
        <option value="true">Yes</option>
      </select>
      <div id="feeAmountField" style="display: none;">
        <label>Fee Amount:</label>
        <input type="number" name="feeAmount" placeholder="Enter fee amount (if paid)" />
      </div>
    </div>

    <!-- Speaker Details -->
    <div class="section">
      <h3>Speakers</h3>
      <div id="speakerContainer">
        <div class="speaker">
          <label>Speaker Name:</label>
          <input type="text" name="speakerName[]" placeholder="Enter speaker name" required />

          <label>Speaker Description:</label>
          <textarea name="speakerDescription[]" placeholder="Brief bio or achievements" required></textarea>

          <label>Speaker Profile Photo:</label>
          <div class="file-upload" onclick="document.getElementById('speakerInput0').click()">
            <img src="/uploads/icons/folder-upload.png" alt="Upload Icon" class="upload-icon">
            <p>Drag and drop image, or <span>click to browse</span></p>
          </div>
          <input type="file" id="speakerInput0" name="speakerProfile[]" accept="image/*" required onchange="updateFileName('speakerInput0', 'speakerFileName0')">
          <p id="speakerFileName0"></p>
        </div>
      </div>
      <button type="button" onclick="addSpeaker()">Add Another Speaker</button>
    </div>

    <button type="submit">Create Event</button>
  </form>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      // Custom Time Picker
      flatpickr("input[type='time']", {
        enableTime: true,
        noCalendar: true,
        dateFormat: "H:i",
        time_24hr: true,
        disableMobile: "true"
      });

      // Toggle fee amount field based on "Is Paid" selection
      document.getElementById("isPaid").addEventListener("change", function () {
        document.getElementById("feeAmountField").style.display = this.value === "true" ? "block" : "none";
      });
    });

    // Function to update file name display
    function updateFileName(inputId, displayId) {
      const input = document.getElementById(inputId);
      const fileName = input.files.length > 0 ? input.files[0].name : "No file chosen";
      document.getElementById(displayId).textContent = fileName;
    }

    // Function to dynamically add speaker input fields
    let speakerIndex = 1;
    function addSpeaker() {
      const container = document.getElementById("speakerContainer");

      const speakerDiv = document.createElement("div");
      speakerDiv.classList.add("speaker");

      speakerDiv.innerHTML = `
        <label>Speaker Name:</label>
        <input type="text" name="speakerName[]" required />

        <label>Speaker Description:</label>
        <textarea name="speakerDescription[]" required></textarea>

        <label>Speaker Profile Photo:</label>
        <div class="file-upload" onclick="document.getElementById('speakerInput${speakerIndex}').click()">
          <img src="/uploads/icons/folder-upload.png" alt="Upload Icon" class="upload-icon">
          <p>Drag and drop image, or <span>click to browse</span></p>
        </div>
        <input type="file" id="speakerInput${speakerIndex}" name="speakerProfile[]" accept="image/*" required onchange="updateFileName('speakerInput${speakerIndex}', 'speakerFileName${speakerIndex}')">
        <p id="speakerFileName${speakerIndex}"></p>
      `;

      container.appendChild(speakerDiv);
      speakerIndex++;
    }
  </script>

</body>
</html>
